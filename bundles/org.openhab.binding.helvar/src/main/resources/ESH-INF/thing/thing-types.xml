<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="helvar"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->

	<bridge-type id="router">
		<label>Helvar Bridge</label>
		<description>This represents a Helvar Router</description>

		<properties>
			<property name="vendor">Helvar</property>
		</properties>

		<config-description>
			<parameter name="ipAddress" type="text">
				<context>network-address</context>
				<label>Network Address</label>
				<description>The network address of the helvar router.</description>
				<required>true</required>
			</parameter>
			<parameter name="port" type="integer" required="false" min="1" max="65535">
				<label>Port</label>
				<description>Port TCP port the Helvar router is expecting to recieve HelvarNet requests on.
				Default is 50000.</description>
				<default>50000</default>
			</parameter>
			<parameter name="clusterId" type="integer" required="false" min="0" max="253">
				<label>Cluster</label>
				<description>Router Cluster ID. It seems that this should be set to 0 if no clusters set.</description>
				<default>0s</default>
			</parameter>
			<parameter name="routerId" type="integer" required="false" min="1" max="254">
				<label>Router</label>
				<description>Router Router ID</description>
				<default>1</default>
			</parameter>

		</config-description>
	</bridge-type>

	<thing-type id="dimmer">
		<supported-bridge-type-refs>
			<bridge-type-ref id="router"/>
		</supported-bridge-type-refs>

		<label>Dimmer</label>
		<description>Controls dimmable things, probably lights.</description>

		<channels>
			<channel id="lightlevel" typeId="lightDimmer"/>
		</channels>

		<config-description>
			<parameter name="subnetId" type="integer" required="true" min="1" max="4">
				<label>Subnet</label>
				<description>Subnet ID of the dimmer under the assigned router.</description>
			</parameter>
			<parameter name="deviceId" type="integer" required="true" min="1" max="255">
				<label>Device</label>
				<description>Device ID of the dimmer under the assigned router.</description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="group">
		<supported-bridge-type-refs>
			<bridge-type-ref id="router"/>
		</supported-bridge-type-refs>

		<label>Group</label>
		<description>A group of things on the Helvar device. Groups support scenes, have a name and map directly to
			DALI groups on the DALI bus.</description>

		<channels>
			<channel id="scene" typeId="sceneSelector"/>
			<channel id="sceneLightLevel" typeId="sceneLightDimmer"/>
		</channels>

		<config-description>
			<parameter name="groupId" type="integer" required="true" min="1" max="16383">
				<label>Group Number</label>
				<description>Group ID of the group.</description>
			</parameter>
			<parameter name="blockId" type="integer" required="true" min="1" max="8">
				<label>Scene Block</label>
				<description>This handler only supports selecting scenes on one Block. Select the Block ID here</description>
			</parameter>
			<parameter name="name" type="text" required="false">
				<label>Name</label>
				<description>Descriptive name of the Group.</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="lightDimmer">
		<item-type>Dimmer</item-type>
		<label>Light Level</label>
		<description>Increase/decrease the light level.</description>
		<state min="0" max="100" pattern="%d %%"/>
	</channel-type>

	<channel-type id="sceneSelector">
		<item-type>Number</item-type>
		<label>Scene</label>
		<description>Select a scene.</description>
		<state>
			<options>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
				<option value="7">7</option>
				<option value="8">8</option>
				<option value="9">9</option>
				<option value="10">10</option>
				<option value="11">11</option>
				<option value="12">12</option>
				<option value="13">13</option>
				<option value="14">14</option>
				<option value="15">15</option>
				<option value="16">Off</option>
			</options>
		</state>

	</channel-type>

	<channel-type id="sceneLightDimmer">
		<item-type>Dimmer</item-type>
		<label>Scene Light Level</label>
		<description>Increase/decrease the light level proportionally across the scene.</description>
		<category>DimmableLight</category>
		<state min="0" max="100" pattern="%d %%"/>
	</channel-type>


</thing:thing-descriptions>
